{
	"compilerOptions": {
		"strict": true,
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",
		"noUnusedParameters": true,
		"noUnusedLocals": true,
		"noImplicitReturns": true,
		"allowJs": true,
		"sourceMap": true,
		"jsx": "react",
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"outDir": "dist"
	},

	"include": [
		"src"
	]
}
